<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/primaryText</item>
        <item name="bottomSheetDialogTheme">@style/BottomSheetDialog</item>
    </style>

    <style name="AppTheme.LauncherTheme">
        <item name="android:windowBackground">@drawable/background_launcher</item>
    </style>

    <style name="AlertBanner" parent="@style/AppTheme">
        <item name="android:minHeight">80dp</item>
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="android:drawableStart">@drawable/ic_info</item>
        <item name="android:drawableEnd">@drawable/ic_keyboard_arrow_right</item>
        <item name="android:drawablePadding">@dimen/padding_normal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingStart">@dimen/padding_large</item>
        <item name="android:paddingEnd">@dimen/padding_large</item>
        <item name="android:paddingTop">@dimen/padding_normal</item>
        <item name="android:paddingBottom">@dimen/padding_normal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="BottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceBottomSheetDialog</item>
    </style>

    <style name="ShapeAppearanceBottomSheetDialog">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">@dimen/bottom_sheet_corner_radius</item>
        <item name="cornerSizeTopLeft">@dimen/bottom_sheet_corner_radius</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="ImageView" />

    <style name="ImageView.BtnClose">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
        <item name="android:clickable">true</item>
        <item name="android:contentDescription">@string/close_button_content_descriptor</item>
        <item name="android:focusable">true</item>
        <item name="android:src">@drawable/ic_close</item>
    </style>

    <style name="TextView" />

    <style name="TextView.ScreenTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/title_font_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextView.ScreenSubtitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/padding_normal</item>
        <item name="android:textSize">@dimen/subtitle_font_size</item>
    </style>

    <style name="Switch" />

    <style name="Switch.EnableExposureNotification">
        <item name="android:text">@string/switch_exposure_notifications</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/padding_normal</item>
        <item name="android:textSize">@dimen/big_font_size</item>
    </style>

    <style name="TextView.ExposureInformationRowTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/lightGray</item>
        <item name="android:padding">@dimen/padding_small</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextView.ExposureInformationRowText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">@dimen/padding_small</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ExposureInformationRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:foreground">@drawable/outlined_background</item>
    </style>

    <style name="Divider" />

    <style name="Divider.Vertical">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/gray</item>
    </style>

    <style name="Divider.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/gray</item>
    </style>

    <style name="Button" />

    <style name="Button.Action">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">@dimen/padding_small</item>
        <item name="android:paddingBottom">@dimen/padding_small</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/button_font_size</item>
    </style>

    <style name="TextView.ExposureDashboardStat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
        <item name="android:background">@drawable/bg_exposure_dashboard_number</item>
        <item name="android:minEms">2</item>
        <item name="android:maxEms">3</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">@dimen/padding_normal</item>
        <item name="android:paddingEnd">@dimen/padding_normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextView.TestCodeInfoItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/padding_normal</item>
        <item name="android:drawablePadding">@dimen/padding_large</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">13sp</item>
    </style>

</resources>
